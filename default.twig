{% extends "layout.twig" %}

{% block content %}

<div class="bk-pt-default">
    {{widget('extendednavigation', 'navigationheader', {"align":"center"})|raw}}

<div class="canvas">    
    <header class="bk-header clearfix">
            <div class="companyheader">
                {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png'),"showTplWidget":"0"})|raw}}
                {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
            </div>
    </header>
    <div class="main wrapper clearfix">
        {{zone('main')|raw}}
    </div> <!--end main -->
</div><!--end canvas -->

<footer class="bk-footer">
    <div class="wrapper clearfix">
        {{widget('socialicons', 'footercolumn1socialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
    </div>
</footer>

</div>

{% endblock %}
